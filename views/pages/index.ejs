<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', { title: pageTitle }) %>
</head>
<body>

<div class="container home" itemscope itemtype="http://schema.org/PostalAddress">

    <div class="row">
        <div>
            <a href="/">
                <h1 class="text-uppercase huge">POSTCODES</h1>
            </a>
            <a href="/postcode/<%= countryCode %>">
                <h2 class="text-uppercase semi-huge" itemprop="addressCountry">SRI LANKA</h2>
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 col-lg-6 col-lg-offset-3 page-content">
            <div class="row">

                <div id="select-city" class="form-group col-xs-12 normal">
                    <label for="city-search">Pick City</label>
                    <input id="city-search" class="big" type="text" placeholder="<%= placeholder %>" autocomplete="off" value="<%= city %>">
                    <span class="bar"></span>
                </div>

                <div id="postcode-display" class="col-xs-12 small">
                    <span class="postcode-description">The postcode for </span>
                    <span class="italic">
                        <span id="city-name" itemprop="addressLocality"><%= city %></span>,
                        <span id="region-name" itemprop="addressRegion"><%= region %></span>
                    </span>
                    <div id="postcode" class="huge" itemprop="postalCode"><%= postcode %></div>
                </div>
                <div id="error-container" class="col-xs-12 normal">
                    <div class="huge">:(</div>
                    <div id="error-message"></div>
                </div>

                <script>
                    var countryCode = "<%= countryCode %>";
                </script>

            </div>
        </div>
    </div>

    <div class="sidebar col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 padding-top">
        <div class="padding-top">
            <% include ../partials/ads %>
        </div>
    </div>

</div>

<% include ../partials/scripts %>
</body>
</html>